
@model List<ArtGalleryWeb.Models.ContactModel>

@{
    ViewBag.Title = "ViewContact";
    Layout = "~/Views/Shared/IndeLayout.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables</h1>
    <br />
    
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>txtName</th>
                            <th>txtEmail</th>
                            <th>Subject</th>
                            <th>Message</th>
                            <th>Update</th>
                            <th>Delete</th>
                            
                        </tr>
                    </thead>
                    
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.txtName</td>
                            <td>@item.txtEmail</td>
                            <td>@item.Subject</td>
                            <td>@item.Message</td>
                            <td><a href="@Url.Action("UpdateContact","UpdateContact", new { FID = @item.FID })" ><i class="fa fa-edit"></i></a></td>
                            <td><a href="@Url.Action("DeleteContact","UpdateContact", new { FID = @item.FID })"><i class="fa fa-trash"></i></a></td>
                           
                        </tr>
                        }
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>

@if (TempData["Message"] != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@TempData["Message"]");
        }
    </script>
}
<!-- /.container-fluid -->
     
<!-- End of Main Content -->